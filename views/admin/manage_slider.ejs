<%-  include("navbar.ejs") %> 
<form action="/admin/save_slider" method="post" enctype="multipart/form-data">
    <div class="container-fluid p-5 bg-white" >
        <div class="row">
            <div class="col-md-12 text-center">
                <h3>Manage Slider</h3>
            </div>
            <div class="col-md-6 mt-3">
                Select Image
                <input type="file" name="slider_image" class="form-control">
            </div>
            <div class="col-md-6 mt-3">
                Enter Title
                <input type="text" name="slider_title" class="form-control">
            </div>
            <div class="col-md-6 mt-3">
                Enter Button Text
                <input type="text" name="slider_button_text" class="form-control">
            </div>
            <div class="col-md-6 mt-3">
                Enter Button Link
                <input type="text" name="slider_button_link" class="form-control">
            </div>
            <div class="col-md-12 mt-4 text-center">
                <button class="btn btn-primary" >Save Slider</button>
            </div>
        </div>
    </div>
    </form>
    <br>
    <hr>
    <br>
    <div class="container-fluid">
    <table class="table table-sm table-bordered">
        <tr>
            <th></th>
            <th >SN</th>
            <th>Image</th>
            <th>Title</th>
            <th>Button Text</th>
            <th>Button Link</th>
        </tr>
        <% for(var i=0;i<slides.length;i++) { %>
            <tr>
                <td width="5%" style="white-space: nowrap;">
       <a href="/admin/delete_slider/<%=slides[i].slider_id%>" onclick="return confirm('Are You Sure..? ')">
                    <button class="btn btn-danger"><i class="fa fa-trash"></i></button>
                    </a>
                </td>
                <td ><%=i+1%></td>
                <td width="100px">
                    <img src="/upload/<%=slides[i].slider_image%>" width="100px">
                </td>
                <td><%=slides[i].slider_title%></td>
                <td><%=slides[i].slider_button_text%></td>
                <td><%=slides[i].slider_button_link%></td>
            </tr>
         <%   } %>
    </table>
</div>

<%- include("footer.ejs") %>