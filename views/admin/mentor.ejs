<%-  include("navbar.ejs") %> 


<form action="/admin/save_mentor" method="post" enctype="multipart/form-data">
    <div class="container-fluid p-5 bg-white" >
        <div class="row">
            <div class="col-md-12 text-center">
                <h3>Manage Mentor</h3>
            </div>
            <div class="col-md-6 mt-3">
                Select Image
                <input type="file" name="mentor_image" class="form-control">
            </div>
            <div class="col-md-6 mt-3">
                Enter Name
                <input type="text" name="mentor_name" class="form-control">
            </div>
            <div class="col-md-6 mt-3">
                Enter Country
                <input type="text" name="mentor_country" class="form-control">
            </div>
            <div class="col-md-6 mt-3">
                Enter Description
                <input type="text" name="mentor_description" class="form-control">
            </div>
            <div class="col-md-12 mt-4 text-center">
                <button class="btn btn-primary" >Save Mentor</button>
            </div>
        </div>
    </div>
    </form>

    <div class="container-fluid">
        <table class="table table-sm table-bordered">
            <tr>
                <th></th>
                <th >SN</th>
                <th>Image</th>
                <th>Name</th>
                <th>Country</th>
                <th>Description</th>
            </tr>
            <% for(var i=0;i<mentor.length;i++) { %>
                <tr>
                    <td width="5%" style="white-space: nowrap;">
    
                        <a href="/admin/delete_mentor/<%=mentor[i].mentor_id%>" onclick="return confirm('Are You Sure..? ')">       
                            <button class="btn btn-danger"><i class="fa fa-trash"></i></button>
                            </a>
                    </td>
                    <td ><%=i+1%></td>
                    <td width="100px">
                        <img src="/upload/<%=mentor[i].mentor_image%>" width="100px">
                    </td>
                    <td><%=mentor[i].mentor_name%></td>
                    <td><%=mentor[i].mentor_country%></td>
                    <td><%=mentor[i].mentor_description%></td>
                </tr>
             <%   } %>
        </table>

















